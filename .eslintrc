{
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "node": true,
        "browser": true
    },
    "plugins": [
        "babel",
        "react"
    ],
    "rules": {
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "no-multi-spaces": [
            1,
            {
                "exceptions": {
                    "VariableDeclaration": true,
                    "ImportDeclaration": true
                }
            }
        ]
    }
}